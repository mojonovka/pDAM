<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/prop_row_item_card"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/propRow_FAB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:clickable="false"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_circulo_rojo"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/propRow_img"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_prop_row_def" />

            <TextView
                android:id="@+id/propRow_nombre_descriptivo"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:contentDescription="propFoto"
                android:padding="10dp"
                android:text="Nombre descriptivo"
                android:textAlignment="center"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/propRow_municipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Nombre del pueblo"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/propRow_periodo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="periodo"
                android:textAlignment="textEnd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/propRow_precio"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="precio"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>